<div class='comment'>
    <a class='avatar'>
        <img src='<%= answer.user.avatar %>'>
    </a>
    <div class='content'>
        <a class='author'><%= answer.user.username %></a>
        <div class='metadata'>
            <% if answer.accepted %>
                <span class='accepted' data-tooltip='This is the accepted answer.' data-inverted><i class='green checkmark icon'></i></span>
            <% end %>
            <span class='date'><%= time_ago_in_words(answer.created_at) %></span>
        </div>
        <div class='text'>
            <%= answer.text %>
        </div>
        <div class='actions'>
            <% if current_user and answer.user.id == current_user.id %>
                <%= link_to 'Delete', [answer.question, answer], method: :delete, data: { confirm: 'Are you sure?' } %>          
            <% end %>
        </div>
    </div>
</div>